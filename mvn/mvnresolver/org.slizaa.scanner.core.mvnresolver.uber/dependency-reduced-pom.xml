<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>org.slizaa.scanner.core.mvnresolver.parent</artifactId>
    <groupId>org.slizaa.scanner.core</groupId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.slizaa.scanner.core.mvnresolver.uber</artifactId>
  <build>
    <plugins>
      <plugin>
        <groupId>org.slizaa.scanner.mojos</groupId>
        <artifactId>copydependencies-maven-plugin</artifactId>
        <version>${project.version}</version>
        <executions>
          <execution>
            <id>copyDependencies</id>
            <goals>
              <goal>copyDependencies</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <targetDirectory>target/classes/libs</targetDirectory>
          <coords>
            <coord>org.slizaa.scanner.core:org.slizaa.scanner.core.mvnresolver.implementation:1.0.0-SNAPSHOT</coord>
            <coord>org.slf4j:slf4j-nop:1.7.25</coord>
            <coord>org.slf4j:slf4j-api:1.7.25</coord>
          </coords>
          <excludeArtifactIds>org.slizaa.scanner.core.mvnresolver.api,guava</excludeArtifactIds>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.slizaa.scanner.core:org.slizaa.scanner.core.mvnresolver.api</include>
                  <include>org.xeustechnologies:*</include>
                  <include>org.slf4j:*</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.xeustechnologies</pattern>
                  <shadedPattern>org.slizaa.scanner.core.mvnresolver.org.xeustechnologies</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.slf4j</pattern>
                  <shadedPattern>org.slizaa.scanner.core.mvnresolver.org.slf4j</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
        <configuration />
      </plugin>
      <plugin>
        <groupId>biz.aQute.bnd</groupId>
        <artifactId>bnd-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>bnd-process</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>21.0</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>animal-sniffer-annotations</artifactId>
          <groupId>org.codehaus.mojo</groupId>
        </exclusion>
        <exclusion>
          <artifactId>j2objc-annotations</artifactId>
          <groupId>com.google.j2objc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>error_prone_annotations</artifactId>
          <groupId>com.google.errorprone</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jsr305</artifactId>
          <groupId>com.google.code.findbugs</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

