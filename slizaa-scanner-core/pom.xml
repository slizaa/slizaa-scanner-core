	<groupId>org.slizaa.scanner.core</groupId>
	<artifactId>org.slizaa.scanner.core.parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<packaging>pom</packaging>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<modules>
		<module>org.slizaa.scanner.core.spi-api</module>
		<module>org.slizaa.scanner.core.contentdefinition</module>
		<module>org.slizaa.scanner.core.classpathscanner</module>
